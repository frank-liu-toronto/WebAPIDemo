@model Shirt

<h3>Shirt</h3>
<br/>
<form method="post" asp-action="CreateShirt">
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Brand" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Brand" class="form-control" />
        </div>        
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Gender" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Gender" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Color" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Color" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Size" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Size" class="form-control" min="1" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Price" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Price" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
        <div class="col-6">
            
        </div>
    </div>
</form>